@model IEnumerable<ContactsManagerInMVCLinqEF.State>

@{
    ViewBag.Title = "States";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h2>States</h2>

<p>
    @Html.ActionLink("Add State", "Create")
</p>

@using (Html.BeginForm())
{
    @Html.Label("FKCountryId", "Country:")
    @Html.DropDownList("FKCountryId", "--select--")
    <input type="submit" name="btnSearch" value="Search" />
    <input type="submit" name="btnReset" value="Reset" />
}

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CountryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StateName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CountryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StateName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PKStateId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PKStateId })
            </td>
        </tr>
    }

</table>
