@model IEnumerable<ContactsManagerInMVCLinqEF.Country>

@{
    ViewBag.Title = "Countries";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h2>Countries</h2>

<p>
    @Html.ActionLink("Add Country", "Create")
</p>
<div class="table-responsive">
    <table class="table table-bordered" >
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CountryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZipCodeStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZipCodeEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CountryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZipCodeStart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZipCodeEnd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.PKCountryId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.PKCountryId })
                </td>
            </tr>
        }

    </table>
</div>
